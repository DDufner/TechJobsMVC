<h1>@ViewBag.title</h1>

<form action="/Search/Results" method="post">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                @if (@column.Key == "all")
                {
                    <input type="radio"
                           name="searchType"
                           id="@column.Key"
                           value="@column.Key"
                           checked />

                }
                else
                {
                    <input type="radio"
                           name="searchType"
                           id="@column.Key"
                           value="@column.Key" />
                }

                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.column.Count Result(s)</h3>

    <ul>
           @foreach (Dictionary<string, string> job in ViewBag.jobs)

    {
        <li>
            @foreach (string column  in job.Values)
            {
                <a asp-controller="Search" asp-action="Results">@column</a> 
            }
        </li>
        
    }

    </ul>

    // TODO #2 - Loop over jobs dictionary and display all job fields
}